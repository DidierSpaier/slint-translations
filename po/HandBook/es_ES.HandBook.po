msgstr ""

#. type: delimited block -
#: HandBook.adoc:1174
#, no-wrap
msgid "cat /etc/mnt/etc/slint-version\n"
msgstr ""

#. type: Plain text
#: HandBook.adoc:1177
msgid "Assuming that you installed Slint64-15.0 the output should be: *Slint 15.0*"
msgstr ""

#. type: Plain text
#: HandBook.adoc:1179
msgid "If the output is \"file not found\" the partition is not the one you looked for. In this case only, type:"
msgstr "Si la salida es \"archivo no encontrado\", la partición no es la que buscaba. Solo en este caso, tipo:"

#. type: delimited block -
#: HandBook.adoc:1182
#, no-wrap
msgid "umount /mnt\n"
msgstr ""

#. type: Plain text
#: HandBook.adoc:1185
msgid "then try another one, going back to the list of drives and partitions."
msgstr "luego intente con otra, volviendo a la lista de discos y particiones."

#. type: Title ====
#: HandBook.adoc:1187
#, no-wrap
msgid "Issue the needed commands to jump into Slint"
msgstr ""

#. type: Plain text
#: HandBook.adoc:1190
msgid "mount the file systems /proc /sys and /dev typing:"
msgstr ""

#. type: delimited block -
#: HandBook.adoc:1195
#, no-wrap
msgid "mount -B /dev /mnt/dev\n"
"mount -B /proc /mnt/proc\n"
"mount -B /dev /mnt/sys\n"
msgstr "montar -B /dev /mnt/dev\n"
"mount -B /proc /mnt/proc\n"
"mount -B /dev /mnt/sys\n"

