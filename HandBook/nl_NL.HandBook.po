"window_menu_button = Alt+Button3\n"
"show_desktop_key = Control+Alt+d\n"
"toggle_window_shaded_key = Control+Alt+s +"
msgstr "[core] Algemene opties, tab \"sneltoetsen\":\n"
"close_window_key = Alt+F4\n"
"raise_window_button = Control+Knop6\n"
"lower_window_button = Alt+Knop6\n"
"minimize_window_key = Alt+F9\n"
"maximize_window_key = Alt+F10\n"
"unmaximize_window_key = Alt+F5\n"
"window_menu_key = Alt+spatiebalk\n"
"window_menu_button = Alt+Knop3\n"
"show_desktop_key = Control Alt+d\n"
"toggle_window_shaded_key = Control+Alt +s +"

#. type: Plain text
#: HandBook.adoc:985
#, no-wrap
msgid "[matecompat] Mate Compatibility\n"
"main_menu_key = Alt+F1\n"
"run_key = Alt+F2 +"
msgstr "[matecompat] Mate compatibiliteit\n"
"main_menu_key = Alt + F1\n"
"run_key = Alt + F2 +"

#. type: Plain text
#: HandBook.adoc:987
msgid "Category Accessibility"
msgstr "Categorie Toegankelijkheid"

#. type: Plain text
#: HandBook.adoc:990
#, no-wrap
msgid "[addhelper] Dim inactive (less light on non focused windows)\n"
"toggle_key = Super+p +"
msgstr "[addhelper] Dim inactief (niet actieve vensters donkerder)\n"
"toggle_key = Super+p +"

#. type: Plain text
#: HandBook.adoc:995
#, no-wrap
msgid "[colorfilter] (Filter color for accessibility purposes)\n"
"toggle_window_key = Super+Alt+f\n"
"toggle_screen_key = Super+Alt+d\n"
"switch_filter_key = Super+Alt+s +"
msgstr "[colorfilter] (Kleurenfilter voor toegankelijkheidsdoeleinden)\n"
"toggle_window_key = Super+Alt+f\n"
"toggle_screen_key = Super+Alt+d\n"
"switch_filter_key = Super+Alt+s +"

#. type: Plain text
#: HandBook.adoc:1000
#, no-wrap
msgid "[ezoom] Enhanced Zoom Desktop\n"
"zoom_in_button = Super+Button4\n"
"zoom_out_button = Super+Button5\n"
"zoom_box_button = Super+Button2 (zoom out to go back to normal) +"
msgstr "[ezoom] Verbeterde Zoom Desktop\n"
"zoom_in_button = Super+Knop4\n"
"zoom_out_button = Super+Knop5\n"
"zoom_box_button = Super+Knop2 (uitzoomen naar normaal) +"

#. type: Plain text
#: HandBook.adoc:1004
#, no-wrap
msgid "[neg] Negative (toggle inverse colors of the window or screen)\n"
"window_toggle_key = Super+n\n"
"screen_toggle_key = Super+m +"
msgstr "[neg] Negatief (inverse kleuren van het venster of het scherm)\n"
"window_toggle_key = Super+n\n"
"screen_toggle_key = Super+m +"

#. type: Plain text
#: HandBook.adoc:1008
#, no-wrap
msgid "[obs] Opacity, Brightness and Saturation adjustments\n"
"opacity_increase_button = Alt+Button4\n"
"opacity_decrease_button = Alt+Button5 +"
msgstr "[obs] Instellingen voor transparantie, helderheid en verzadiging\n"
"opacity_increase_button = Alt+Knop4\n"
"opacity_decrease_button = Alt+Knop5 +"

#. type: Plain text
#: HandBook.adoc:1011
#, no-wrap
